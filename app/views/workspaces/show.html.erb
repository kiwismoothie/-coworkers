<div class="container text-center mt-4">
      <div class="mx-auto mt-4">
          <div class="chat-head">
            <div class="chat-title"><%= @workspace.name %></div>
            <%= link_to :back, class: 'btn btn-default' do %>
            <i class="fa fa-arrow-left" style="font-size: 1.3em; color: #FFB116;"></i>
            <% end %>
          </div>
      <div class="top-divider"> </div>
</div>
</div><div class="container-fluid">
  <div class="mx-auto mt-2">
      <div>
        <details>
          <summary><%= image_tag @workspace.user.photos.first, height: 70, width: 70, class: "avatar2", alt: "Photo" %><i class="fa-solid fa-circle-chevron-down fa-sl" style="color: #004792;"></i></summary>
          <p class="description-text"><%= @workspace.user.description %></p>
        </details>

      </div>
  </div>


  <div class="workspace-card">
    <div class="workspace-image">
      <% @workspace.photos %>
      <%= cl_image_tag @workspace.photos.first.key, crop: :fill %>
      <%= render "heart" %>
    </div>

    <ul class="workspace-infos">
      <div class="description-adress-show">
        <li><i class="fa-solid fa-circle-info fa-xl me-2" style="color: #004792;"></i><%= @workspace.description %></li>
        <li><i class="fa-solid fa-location-dot fa-xl me-2" style="color: #004792;"></i><%= @workspace.address %></li>
      </div>
       <div class="font-awesome d-flex justify-content-between">
        <li><% if @workspace.capacity == 1 %>
          <i class="fa-solid fa-user fa-2xl" style="color: #004792;"></i>
        <% elsif @workspace.capacity == 2 %>
          <i class="fa-solid fa-user-group fa-2xl" style="color: #004792;"></i>
        <% elsif @workspace.capacity == 3 %>
          <i class="fa-solid fa-users fa-2xl" style="color: #004792;"></i>
        <% end %>
        </li>
        <li>
          <% if @workspace.internet_connexion %>
            <i class="fa-solid fa-wifi fa-2xl" style="color: #004792;"></i>
          <% else %>
            <i class="fa-solid fa-wifi fa-2xl" style="color: #CDCBD2;"></i>
          <% end %>
        </li>
        <li>
          <% if @workspace.smoking %>
            <i class="fa-solid fa-smoking fa-2xl" style="color: #004792;"></i>
          <% else %>
            <i class="fa-solid fa-smoking fa-2xl" style="color: #CBCDD2;"></i>
          <% end %>
        </li>
        <li>
          <% if @workspace.ambiance == "Calme" %>
            <i class="fa-solid fa-volume-xmark fa-2xl" style="color: #004792;"></i>
          <% elsif @workspace.ambiance == "Animé" %>
            <i class="fa-solid fa-volume-xmark fa-2xl" style="color: #CBCDD2;"></i>
          <% end %>
        </li>
        <li>
          <% if @workspace.animals == "Chien"%>
            <i class="fa-solid fa-dog fa-2xl" style="color: #004792;"></i>
          <% elsif @workspace.animals == "Chat" %>
            <i class="fa-solid fa-cat fa-2xl" style="color: #004792;"></i>
          <% elsif @workspace.animals == "Autre" %>
            <i class="fa-solid fa-paw fa-2xl" style="color: #004792;"></i>
          <% else  %>
            <i class="fa-solid fa-paw fa-2xl" style="color: #cdcbd2;"></i>
          <% end %>
        </li>
      </div>
        <li class="workspace-info-date">
          <%= simple_form_for([@workspace, @booking]) do |f| %>
          <div>Date souhaitée :</div>
            <div class="workspace-date-box">
              <div class="input-left">
                <%= f.input :start_date, label: false, as: :string, input_html: { data: { controller: "datepicker" } } %>
              </div>
              <div class="chat-right">
                <%= link_to workspace_create_chatroom_path(@workspace), method: :post do %>
                  <i class="fa-regular fa-comment fa-2xl" style="color: #ffb116;"></i>
                <% end %>
              </div>
            </div>
            <%= f.button :submit, "Envoyer ma demande", class: "bouton-show btn yellow-btn" %>
          <% end %>
        </li>
      </ul>
    </div>
</div>
