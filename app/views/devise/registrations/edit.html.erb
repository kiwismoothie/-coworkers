<div class="container d-flex align-items-center justify-content-center vh-100">
  <div class="row">
    <div class="col-12 col-md-12 col-lg-12 mx-auto">

      <h2>Mes informations</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>En attente de confirmation de <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :first_name, label: "Prénom",
                      required: false,
                      input_html: { autocomplete: "first_name" } %>
          <%= f.input :last_name, label: "Nom",
                      required: false,
                      input_html: { autocomplete: "last_name" } %>
          <%= f.input :address, label: "Adresse",
                      required: false,
                      input_html: { autocomplete: "address" } %>
          <%= f.input :password, label: "Nouveau mot de passe",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation, label: "Confirmation du nouveau mot de passe",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="form-actions">
            <%= f.input :current_password, label: "Mot de passe actuel",
              hint: "Pour valider les modifications, merci de saisir votre mot de passe actuel",
              required: true,
              input_html: { autocomplete: "current-password" } %>
          <%= f.button :submit, "Sauvegarder les modifications", class:"yellow-btn" %>
        </div>
      <% end %>

      <div>

        <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Êtes-vous sûr ?", turbo_confirm: "Êtes-vous sûr de supprimer votre compte ainsi que toutes ses données ? Il ne sera pas possible de le réactiver plus tard, vous devrez créer un nouveau compte." }, method: :delete, class: "delete-btn" %></div>
      </div>
    </div>
  </div>
</div>
